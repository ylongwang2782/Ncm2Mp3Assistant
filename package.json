{
  "name": "ncm2mp3-assistant",
  "version": "1.0.1",
  "description": "NCM to MP3 assistant application",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "dev:electron": "concurrently -k \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron:dev\"",
    "preview": "husky install",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin main"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.3.4",
    "element-plus": "^2.4.3",
    "python-shell": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
    "concurrently": "^9.1.2",
    "electron-builder": "^24.9.1",
    "electron": "^28.1.0",
    "husky": "^8.0.0",
    "standard-version": "^9.5.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.ncm2mp3.assistant",
    "productName": "NCM to MP3 assistant",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "ncm_converter.py",
      "requirements.txt"
    ],
    "extraResources": [
      {
        "from": "ncm_converter.py",
        "to": "ncm_converter.py"
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
