{
  "name": "ncm2mp3-assistant",
  "version": "1.0.0",
  "description": "NCM to MP3 Assistant - A tool to convert NCM files to MP3 format",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "electron-builder",
    "preview": "vite preview"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.3.4",
    "element-plus": "^2.4.3",
    "python-shell": "^5.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "vite": "^5.0.0",
    "electron-builder": "^24.9.1",
    "electron": "^28.1.0",
    "concurrently": "^8.2.2"
  },
  "build": {
    "appId": "com.ncm2mp3.assistant",
    "productName": "NCM to MP3 Assistant",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "ncm_converter.py",
      "requirements.txt",
      "install_dependencies.py"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NCM to MP3 Assistant"
    }
  }
}
